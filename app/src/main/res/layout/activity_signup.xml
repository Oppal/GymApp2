<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signupActivity"
    android:background="@drawable/background2"
    >
<android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></android.support.design.widget.TextInputLayout>
    <ImageView
        android:id="@+id/fitgymlogo"
        android:layout_width="wrap_content"
        android:layout_height="81dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:src="@drawable/fitgymlogo" />

    <TextView
        android:id="@+id/join"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="101dp"
        android:text="Join us for Free!"
        android:textColor="@color/maroon"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/EditTextFirstname"
        android:layout_width="194dp"
        android:inputType="textPersonName"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="153dp"
        android:layout_marginLeft="80dp"
        android:background="@color/dessertsand"
        android:hint="First Name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/EditTextLastname"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:background="@color/dessertsand"
        android:hint="Last Name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_marginLeft="80dp"
        android:textSize="15dp" />
    <EditText
        android:id="@+id/EditTextGender"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="80dp"
        android:background="@color/dessertsand"
        android:hint="Gender"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/EditTextAge"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="259dp"
        android:background="@color/dessertsand"
        android:hint="Age"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/EditTextEmail"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="222dp"
        android:background="@color/dessertsand"
        android:hint="Email Address"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="italic" />



    <EditText
        android:id="@+id/EditTextPassword"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="181dp"
        android:background="@color/dessertsand"
        android:hint="Password"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:textSize="15dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/EditTextConfirmPassword"
        android:layout_width="194dp"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="141dp"
        android:background="@color/dessertsand"
        android:hint="Confirm Password"
        android:textAlignment="center"
        android:layout_marginLeft="80dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        />

    <Button
        android:id="@+id/ButtonSignup"
        android:layout_width="198dp"
        android:layout_marginLeft="80dp"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="78dp"

        android:background="@color/maroon"
        android:text="Register"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="22dp"
        android:layout_height="21dp"
        android:layout_alignTop="@+id/EditTextFirstname"
        android:layout_marginLeft="80dp"
        android:src="@drawable/ic_action_firstname" />

    <ImageView
        android:layout_width="21dp"
        android:layout_height="22dp"
        android:layout_alignTop="@+id/EditTextLastname"
        android:layout_marginLeft="80dp"
        android:src="@drawable/ic_action_firstname" />

    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignTop="@+id/EditTextEmail"
        android:layout_marginLeft="80dp"
        android:src="@drawable/ic_action_email" />

    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginLeft="80dp"
        android:layout_alignTop="@+id/EditTextPassword"
        android:src="@drawable/ic_action_password" />

    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginLeft="80dp"
        android:layout_alignTop="@+id/EditTextConfirmPassword"
        android:src="@drawable/ic_action_conf" />
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ProgressBarLoading"
        android:visibility="gone"
        android:layout_marginTop="450dp"/>

</RelativeLayout>